<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_lineer">

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tabbar">


    </FrameLayout>




        <RadioGroup
            android:id="@+id/tabbar"
            android:layout_width="fill_parent"
            android:layout_height="64dp"
            android:background="#f9000000"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_alignParentBottom="true">

            <RelativeLayout
                android:id="@+id/space1"
                android:layout_width="30dp"
                android:layout_height="match_parent">

            </RelativeLayout>



                <RadioButton
                    android:id="@+id/btn_recommend"
                    android:layout_width="34dp"
                    android:layout_height="44dp"
                    android:button="@null"
                    android:text=""
                    android:textSize="12sp"
                    android:drawableTop="@null"
                    style="@style/main_tab_bottom"
                    android:background="@drawable/tab_icon_recommend_layout"
                     />

            <RelativeLayout
                android:id="@+id/space2"
                android:layout_width="30dp"
                android:layout_height="match_parent">

            </RelativeLayout>


                <RadioButton
                    android:id="@+id/btn_near"
                    android:layout_width="34dp"
                    android:layout_height="44dp"
                    android:button="@null"
                    android:text=""
                    android:textSize="12sp"
                    android:drawableTop="@null"
                    style="@style/main_tab_bottom"
                    android:background="@drawable/tab_icon_near_layout" />

            <RelativeLayout
                android:id="@+id/space3"
                android:layout_width="141dp"
                android:layout_height="match_parent">

            </RelativeLayout>

                <RadioButton
                    android:id="@+id/btn_activity"
                    android:layout_width="34dp"
                    android:layout_height="44dp"
                    android:button="@null"
                    android:text=""
                    android:textSize="12sp"
                    android:drawableTop="@null"
                    style="@style/main_tab_bottom"
                    android:background="@drawable/tab_icon_activity_layout" />

            <RelativeLayout
                android:id="@+id/space4"
                android:layout_width="31dp"
                android:layout_height="match_parent">

            </RelativeLayout>


                <RadioButton
                    android:id="@+id/btn_my"
                    android:layout_width="34dp"
                    android:layout_height="44dp"
                    android:button="@null"
                    android:text=""
                    android:textSize="12sp"
                    android:drawableTop="@null"
                    style="@style/main_tab_bottom"
                    android:background="@drawable/tab_icon_my_layout"
                    android:checked="true"/>

            <RelativeLayout
                android:id="@+id/space5"
                android:layout_width="31dp"
                android:layout_height="match_parent">

            </RelativeLayout>


        </RadioGroup>



    <include layout="@layout/record_"/>



</RelativeLayout>