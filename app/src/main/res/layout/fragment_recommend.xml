<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/windowBackground">

    <include layout="@layout/topbar"/>


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <com.leeovo.listdemo.widgets.SlidingSwitcherView
            android:id="@+id/slidingLayout"
            android:layout_width="fill_parent"
            android:layout_height="160dip">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                >

                <ImageButton
                    android:id="@+id/btn_tuijian1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:scaleType="centerInside"
                    android:src="@drawable/image1"
                    android:background="#00000000"
                    />

                <ImageButton
                    android:id="@+id/btn_tuijian2"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:scaleType="centerInside"
                    android:src="@drawable/image2"
                    android:background="#00000000"/>

                <ImageButton
                    android:id="@+id/btn_tuijian3"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:scaleType="centerInside"
                    android:src="@drawable/image3"
                    android:background="#00000000"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/point"
                android:layout_width="60dip"
                android:layout_height="20dip"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_margin="0dip"
                android:orientation="horizontal" >
            </LinearLayout>
        </com.leeovo.listdemo.widgets.SlidingSwitcherView>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="@color/lanmujiange"
                android:orientation="horizontal">
            </LinearLayout>
    <LinearLayout
        android:id="@+id/bangdantuijian"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="3dp"
            android:layout_height="24dp"
            android:background="@color/fenlei_cebian"
            android:contentDescription="" />

        <LinearLayout
            android:layout_width="8dp"
            android:layout_height="5dp"
            android:id="@+id/kongbai_0"
            android:orientation="horizontal">
        </LinearLayout>

        <TextView
            android:id="@+id/bdtj_biaoti"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="@string/bangdantuijian"
            android:textSize="20sp"
            android:gravity="center_vertical"/>
        <LinearLayout
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:id="@+id/kongbai_0_1"
            android:orientation="horizontal">
        </LinearLayout>

        <ImageView
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:src="@drawable/more_icon"
            android:scaleType="centerInside"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:id="@+id/bdtj_more"
            android:text="@string/more"
            android:textSize="15sp"
            android:background="@color/windowBackground"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bangdan">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="181dp"
                android:layout_height="115dp"
                android:id="@+id/image_tj1"
                android:src="@drawable/tuijian_1"
                android:contentDescription="" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="9dp"
                    android:layout_height="match_parent"
                    android:id="@+id/kongbai_1"
                    android:orientation="horizontal">
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:id="@+id/text_tj1"
                    android:text="@string/bangdan_1"
                    android:textSize="15sp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/zan_tj1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/zanshu_tj1"/>

            </LinearLayout>

        </LinearLayout>


        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="181dp"
                android:layout_height="115dp"
                android:id="@+id/image_tj2"
                android:src="@drawable/tuijian_2"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="9dp"
                    android:layout_height="match_parent"
                    android:id="@+id/kongbai_2"
                    android:orientation="horizontal">
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:id="@+id/text_tj2"
                    android:text="@string/bangdan_2"
                    android:textSize="15sp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/zan_tj2"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/zanshu_tj2"/>

        </LinearLayout>
    </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>


    </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bangdan2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <ImageView
            android:layout_width="181dp"
            android:layout_height="115dp"
            android:id="@+id/image_tj3"
            android:background="@drawable/tuijian_3"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="9dp"
                    android:layout_height="match_parent"
                    android:id="@+id/kongbai_3"
                    android:orientation="horizontal">
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:id="@+id/text_tj3"
                    android:text="@string/bangdan_3"
                    android:textSize="15sp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/zan_tj3"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/zanshu_tj3"/>
            </LinearLayout>
        </LinearLayout>


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <ImageView
            android:layout_width="181dp"
            android:layout_height="115dp"
            android:id="@+id/image_tj4"
            android:background="@drawable/tuijian_4"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="9dp"
                    android:layout_height="match_parent"
                    android:id="@+id/kongbai_4"
                    android:orientation="horizontal">
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:id="@+id/text_tj4"
                    android:text="@string/bangdan_4"
                    android:textSize="15sp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/zan_tj4"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/zanshu_tj4"/>
            </LinearLayout>
        </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

    </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="@color/lanmujiange"
                android:orientation="horizontal">
            </LinearLayout>

    <LinearLayout
        android:id="@+id/yuanchaunggequ"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="3dp"
            android:layout_height="24dp"
            android:background="@color/fenlei_cebian"
            android:contentDescription="" />

        <LinearLayout
            android:layout_width="8dp"
            android:layout_height="5dp"
            android:id="@+id/kongbai_0_3"
            android:orientation="horizontal">
        </LinearLayout>

        <TextView
            android:id="@+id/ycgq_biaoti"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="@string/yuanchanggequ"
            android:textSize="20sp"
            android:gravity="center_vertical"/>
        <LinearLayout
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:id="@+id/kongbai_0_4"
            android:orientation="horizontal">
        </LinearLayout>
        <ImageView
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:src="@drawable/more_icon"
            android:scaleType="centerInside"
            android:contentDescription="" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/ycgq_more"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="@string/more"
            android:textSize="13sp"
            android:gravity="center_vertical" />
        <LinearLayout
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:id="@+id/kongbai_0_5"
            android:orientation="horizontal">
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/yuanchuangsliding"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/yuanchuang_1"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="20dp">
    </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/yuanchang">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="181dp"
                        android:layout_height="115dp"
                        android:id="@+id/image_yc1"
                        android:background="@drawable/yc_1"
                        android:contentDescription="" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="9dp"
                            android:layout_height="match_parent"
                            android:id="@+id/kongbai_5"
                            android:orientation="horizontal">
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="34dp"
                            android:id="@+id/text_yc1"
                            android:text="@string/bangdan_1"
                            android:textSize="15sp"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/zan_yc1"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/zanshu_yc1"/>

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="181dp"
                        android:layout_height="115dp"
                        android:id="@+id/image_yc2"
                        android:background="@drawable/yc_2"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="9dp"
                            android:layout_height="match_parent"
                            android:id="@+id/kongbai_6"
                            android:orientation="horizontal">
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="34dp"
                            android:id="@+id/text_yc2"
                            android:text="@string/bangdan_2"
                            android:textSize="15sp"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/zan_yc2"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/zanshu_yc2"/>

                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>


</LinearLayout>





