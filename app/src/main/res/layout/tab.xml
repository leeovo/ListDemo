<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tab"
    android:layout_width="fill_parent"
    android:layout_height="60dp"
    android:layout_alignParentBottom="true"
    android:background="#B0000000"
    >


    <RadioGroup
        android:id="@+id/tabbar"
        android:layout_width="fill_parent"
        android:layout_height="60dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="60dp">

            <RadioButton
                android:id="@+id/btn_trends"
                android:layout_width="45dp"
                android:layout_height="60dp"
                android:text=""
                android:drawableTop="@null"
                style="@style/main_tab_bottom"
                android:background="@drawable/tab_icon_recommend_layout"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="36dp"
                android:layout_marginStart="36dp" />
            <RadioButton
                android:id="@+id/btn_find"
                android:layout_width="45dp"
                android:layout_height="60dp"
                android:text=""
                android:drawableTop="@null"
                style="@style/main_tab_bottom"
                android:background="@drawable/tab_icon_near_layout"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/btn_trends"
                android:layout_toEndOf="@+id/btn_trends" />
            <RadioButton
                android:id="@+id/btn_message"
                android:layout_width="45dp"
                android:layout_height="60dp"
                android:text=""
                android:drawableTop="@null"
                style="@style/main_tab_bottom"
                android:background="@drawable/tab_icon_activity_layout"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/btn_my"
                android:layout_toStartOf="@+id/btn_my" />
            <RadioButton
                android:id="@+id/btn_my"
                android:layout_width="45dp"
                android:layout_height="60dp"
                android:text=""
                android:drawableTop="@null"
                style="@style/main_tab_bottom"
                android:background="@drawable/tab_icon_my_layout"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="36dp"
                android:layout_marginEnd="36dp" />



        </RelativeLayout>

    </RadioGroup>
</RelativeLayout>